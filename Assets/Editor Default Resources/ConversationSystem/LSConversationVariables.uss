:root
{
	/* Grid */
	--convo-colors-grid-light-grey-1: #2b2b2b;
	--convo-colors-grid-light-grey-2: rgba(51, 51, 51, 0.4);
	--convo-colors-grid-light-grey-3: rgba(51, 51, 51, 1);

	--convo-metrics-grid-25: 25;

	/* Window */
	--convo-colors-window-dark-grey-1: #1D1D1E;
	--convo-colors-window-dark-grey-2: #2B2D2F;
	--convo-colors-window-dark-grey-3: #212325;
	--convo-colors-window-dark-grey-4: #232527;
	--convo-colors-window-dark-grey-5: #252729;
	--convo-colors-window-dark-grey-6: #27292C;

	--convo-colors-window-yellow: #FDD057;

	--convo-metrics-window-pixels-negative-12: -12px;
	--convo-metrics-window-pixels-negative-4: -4px;
	--convo-metrics-window-pixels-0 : 0px;
	--convo-metrics-window-pixels-2 : 2px;
	--convo-metrics-window-pixels-4 : 4px;
	--convo-metrics-window-pixels-8 : 8px;
	--convo-metrics-window-pixels-11 : 11px;
	--convo-metrics-window-pixels-16 : 16px;
	--convo-metrics-window-pixels-25 : 25px;
	--convo-metrics-window-pixels-35 : 35px;
	--convo-metrics-window-pixels-160 : 160px;
	--convo-metrics-window-pixels-240 : 240px;
	--convo-metrics-window-pixels-600 : 600px;
	--convo-metrics-window-pixels-1000 : 1000px;	
}