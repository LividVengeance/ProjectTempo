/* Containers */

.convo-node__extension-container
{
	background-color: var(--convo-colors-window-dark-grey-1);
	padding: var(--convo-metrics-window-pixels-8);
}

.convo-node_main-container
{
	background-color: var(--convo-colors-window-dark-grey-1);
}

.convo-node__custom-data-container
{
	background-color: var(--convo-colors-window-dark-grey-3);
	border-radius: var(--convo-metrics-window-pixels-4);
	padding: var(--convo-metrics-window-pixels-8);
}

/* Inputs */

.convo-node__textfield > .unity-text-field__input
{
	background-color: var(--convo-colors-window-dark-grey-1);
	border-color: var(--convo-colors-window-dark-grey-6);
	border-radius: var(--convo-metrics-window-pixels-4);
	max-width: var(--convo-metrics-window-pixels-240);
	min-width: var(--convo-metrics-window-pixels-160);
	padding: var(--convo-metrics-window-pixels-8);
}

.convo-node__textfield__hidden > .unity-text-field__input
{
	background-color: transparent;
	border-color: transparent;
}

.convo-node__textfield__hidden > .unity-text-field__input:focus
{
	background-color: var(--convo-colors-window-dark-grey-1);
	border-color: var(--convo-colors-window-dark-grey-6);
}

.convo-node__filename-textfield > .unity-text-field__input
{
	max-width: var(--convo-metrics-window-pixels-1000);
}

.convo-node__filename-textfield > .unity-text-field__input:focus
{
	margin: var(--convo-metrics-window-pixels-4);
	padding: var(--convo-metrics-window-pixels-4);
}

.convo-node__choice-textfield > .unity-text-field__input
{
	font-size: var(--convo-metrics-window-pixels-11);
	height: var(--convo-metrics-window-pixels-35);
	max-width: var(--convo-metrics-window-pixels-1000);
	min-width: var(--convo-metrics-window-pixels-0);
}
	
.convo-node__choice-textfield > .unity-text-field__input:focus
{
	font-size: var(--convo-metrics-window-pixels-25);
	margin: var(--convo-metrics-window-pixels-4);
	padding: var(--convo-metrics-window-pixels-4);
}

.convo_node__quote-textfield > .unity-text-field__input
{
	background-color: var(--convo-colors-window-dark-grey-4);
	border-color: transparent;
	border-left-color: var(--convo-colors-window-dark-grey-6);
	border-left-width: var(--convo-metrics-window-pixels-4);
	padding: var(--convo-metrics-window-pixels-16);
	max-width: var(--convo-metrics-window-pixels-600);
}

.convo_node__quote-textfield > .unity-text-field__input::hover
{
	background-color: var(--convo-colors-window-dark-grey-5);
}

.convo_node__quote-textfield > .unity-text-field__input:focus
{
	background-color: var(--convo-colors-window-dark-grey-1);
	border-color: var(--convo-colors-window-dark-grey-6);
}

/* Butons */

.convo-node__button
{
	background-color: var(--convo-colors-window-dark-grey-5);
	border-color: var(--convo-colors-window-dark-grey-1);
	max-height: var(--convo-metrics-window-pixels-25);
	margin: var(--convo-metrics-window-pixels-4);
}

.convo-node__button:hover
{
	background-color: var(--convo-colors-window-dark-grey-2);
}

.convo-node__button:active
{
	background-color: var(--convo-colors-window-dark-grey-3);
	color: var(--convo-colors-window-yellow);
}

.convo-node_custom-data-container > Foldout
{
	margin-left: var(--convo-metrics-window-pixels-negative-4);
	margin-top: var(--convo-metrics-window-pixels-4);
}

.convo-node_custom-data-container > Foldout > TextField
{
	margin-left: var(--convo-metrics-window-pixels-negative-12);
	margin-top: var(--convo-metrics-window-pixels-8);
}

/* Nodes */

TextField
{
	margin-left: var(--convo-metrics-window-pixels-0);
}

/* Built In */
.unity-toggle__text
{
	margin-left: var(--convo-metrics-window-pixels-2);
}